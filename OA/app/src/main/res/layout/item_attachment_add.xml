<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_layout_white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen_txt_padding_top"
            android:paddingBottom="@dimen/dimen_txt_padding_top"
            android:paddingLeft="@dimen/dimen_txt_padding_left">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/BlackTxt18" />

            <TextView
                android:id="@+id/size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_txt_padding_left"
                style="@style/BlackTxt18" />
        </LinearLayout>

        <View
            style="@style/LineCell"
            android:layout_marginLeft="@dimen/dimen_txt_padding_top"
            android:layout_marginTop="@dimen/dimen_txt_padding_top"
            android:layout_marginBottom="@dimen/dimen_txt_padding_top" />

        <ImageView
            android:id="@+id/delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/delete_normal"
            android:paddingRight="@dimen/dimen_txt_padding_top"
            android:background="@drawable/btn_layout_click"
            android:paddingLeft="@dimen/dimen_txt_padding_top" />
    </LinearLayout>

    <View style="@style/LineRow" />
</LinearLayout>
