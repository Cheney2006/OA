<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItemLayout"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/yearMonth_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        style="@style/ItemTitleTxt"/>

    <TextView
        android:id="@+id/total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_sub_title_top"
        android:layout_marginRight="@dimen/dimen_txt_padding_left"
        style="@style/ItemTitleTxt" />

    <ImageView
        android:id="@+id/arrow_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow_right_icon" />
</LinearLayout>