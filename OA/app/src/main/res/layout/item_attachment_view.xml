<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dimen_txt_padding_top"
        android:paddingBottom="@dimen/dimen_txt_padding_top"
        android:background="@drawable/bg_layout_white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_txt_padding_left">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ItemTitleTxt" />

            <TextView
                android:id="@+id/size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_txt_padding_left"
                style="@style/ItemSubTitleTxt" />
        </LinearLayout>

        <View
            style="@style/LineCell"
            android:layout_marginLeft="@dimen/dimen_txt_padding_top" />

        <TextView
            android:id="@+id/download_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GrayTxt16"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_txt_padding_top"
            android:paddingRight="@dimen/dimen_txt_padding_top"
            android:drawableTop="@drawable/icon_download"
            android:drawablePadding="3dp"
            android:minWidth="@dimen/dimen_download_width"
            android:text="@string/txt_download" />
    </LinearLayout>

    <View style="@style/LineRow" />
</LinearLayout>
