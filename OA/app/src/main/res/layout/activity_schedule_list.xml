<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jxd.oa.view.weekcalendar.WeekCalendarView
        android:id="@+id/weekCalendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <ListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/color_transparent"
        android:divider="@drawable/list_divider"
        android:background="@drawable/layout_white_bg"
        android:dividerHeight="@dimen/dimen_divider_height"
        android:fadingEdge="none">

    </ListView>
</LinearLayout>